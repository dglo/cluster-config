<icecube configName="sps-sim-40-49-50"
         remarks="SPS simulation with hubs 40, 49, 50">

  <cluster name="sps">

    <!-- Non-fully-qualified paths are relative to pdaq metaproject on expcont -->
    <logDirForSpade>/mnt/data/pdaqlocal</logDirForSpade>

    <location name="ichub40" host="sps-ichub40">
      <module name="StringHub" id="1001"/>
    </location>

    <location name="ichub49" host="sps-ichub49">
      <module name="StringHub" id="1002"/>
    </location>

    <location name="ichub50" host="sps-ichub50">
      <module name="StringHub" id="1003"/>
    </location>

    <location name="2ndbuild" host="sps-2ndbuild">
      <module name="SecondaryBuilders"/>
    </location>

    <location name="evbuilder" host="sps-evbuilder">
      <module name="eventBuilder"/>
    </location>

    <location name="expcont" host="sps-expcont"/>

    <location name="gtrigger" host="sps-gtrigger">
      <module name="globalTrigger"/>
    </location>

    <location name="iitrigger" host="sps-iitrigger">
      <module name="inIceTrigger"/>
    </location>

    <location name="dbs" host="sps-dbs"/>
  </cluster>
</icecube>
