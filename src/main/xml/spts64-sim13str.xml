<icecube configName="spts64-sim13str"
         remarks="13 string simulation for SPTS64">

  <cluster name="spts64">

    <!-- Non-fully-qualified paths are relative to pdaq metaproject on expcont -->
    <logDirForSpade>/mnt/data/pdaqlocal</logDirForSpade>

    <defaultLogLevel>INFO</defaultLogLevel>

    <location name="ichub21" host="spts64-ichub21">
      <module name="StringHub" id="1001"/>
    </location>

    <location name="ichub29" host="spts64-ichub29">
      <module name="StringHub" id="1002"/>
    </location>

    <location name="ithub01" host="spts64-ithub01">
      <module name="StringHub" id="1003"/>
    </location>

    <location name="sp01" host="spts64-stringproc01">
      <module name="StringHub" id="1004"/>
      <module name="StringHub" id="1005"/>
    </location>

    <location name="sp02" host="spts64-stringproc02">
      <module name="StringHub" id="1006"/>
      <module name="StringHub" id="1007"/>
    </location>

    <location name="sp03" host="spts64-stringproc03">
      <module name="StringHub" id="1008"/>
      <module name="StringHub" id="1009"/>
    </location>

    <location name="sp04" host="spts64-stringproc04">
      <module name="StringHub" id="1010"/>
      <module name="StringHub" id="1011"/>
    </location>

    <location name="sp05" host="spts64-stringproc05">
      <module name="StringHub" id="1012"/>
      <module name="StringHub" id="1013"/>
    </location>

    <location name="2ndbuild" host="spts64-expcont">
      <module name="SecondaryBuilders"/>
    </location>

    <location name="evbuilder" host="spts64-evbuilder">
      <module name="eventBuilder"/>
    </location>

    <location name="iitrigger" host="spts64-iitrigger">
      <module name="inIceTrigger"/>
    </location>

    <location name="ittrigger" host="spts64-ittrigger">
      <module name="iceTopTrigger"/>
    </location>

    <location name="gtrigger" host="spts64-gtrigger">
      <module name="globalTrigger"/>
    </location>

    <location name="expcont" host="spts64-expcont"/>

    <location name="dbs" host="spts64-dbs"/>

    <location name="ittrigger" host="spts64-ittrigger">
      <module name="amandaTrigger">
        <logLevel>DEBUG</logLevel>
      </module>
    </location>
  </cluster>
</icecube>
