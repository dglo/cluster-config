<icecube configName="spts64-sim-21-29"
         remarks="SPTS64 with simulated DOMs on 21 and 29">

  <cluster name="spts64">

    <!-- Non-fully-qualified paths are relative to pdaq metaproject on expcont -->
    <logDirForSpade>/mnt/data/pdaqlocal</logDirForSpade>

    <defaultLogLevel>INFO</defaultLogLevel>

    <location name="ichub21">
      <address>
        <host>spts64-ichub21</host>
      </address>

      <module>
        <name>StringHub</name>
        <id>1021</id>
      </module>
    </location>

    <location name="ichub29">
      <address>
        <host>spts64-ichub29</host>
      </address>

      <module>
        <name>StringHub</name>
        <id>1029</id>
      </module>
    </location>

    <location name="2ndbuild">
      <address>
        <host>spts64-expcont</host>
      </address>

      <module>
        <name>SecondaryBuilders</name>
        <id>0</id>
      </module>
    </location>

    <location name="evbuilder">
      <address>
        <host>spts64-evbuilder</host>
      </address>

      <module>
        <name>eventBuilder</name>
        <id>0</id>
      </module>
    </location>

    <location name="iitrigger">
      <address>
        <host>spts64-iitrigger</host>
      </address>

      <module>
        <name>inIceTrigger</name>
        <id>0</id>
      </module>
    </location>

    <location name="gtrigger">
      <address>
        <host>spts64-gtrigger</host>
      </address>

      <module>
        <name>globalTrigger</name>
        <id>0</id>
      </module>
    </location>

  </cluster>

</icecube>
