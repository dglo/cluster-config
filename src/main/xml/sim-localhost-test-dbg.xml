<icecube remarks="Localhost configuration, testing configuration of debug levels">

  <cluster name="localhost">

    <!-- Non-fully-qualified paths are relative to pdaq metaproject on expcont -->
    <logDirForSpade>spade</logDirForSpade>

    <!-- Set default debug level for this configuration: can be overridden by 
         individual components -->
    <defaultLogLevel>WARN</defaultLogLevel>

    <!-- Each location element corresponds to a host (and the iceboss
      instance on it) and lists the services and ejbs on that
      host. The rank attribute orders locations, for example the DB or
      ExpCont node might need to be handled differently within the
      cluster. -->
    <location name="localhost">
      <address>
        <host>localhost</host>
      </address>

      <module>
        <name>StringHub</name>
        <id>1001</id>
	<logLevel>FATAL</logLevel>
      </module>

      <module>
        <name>StringHub</name>
        <id>1002</id>
      </module>

      <module>
        <name>StringHub</name>
        <id>1003</id>
	<logLevel>ERROR</logLevel>
      </module>

      <module>
        <name>StringHub</name>
        <id>1004</id>
        <logLevel>INFO</logLevel>
      </module>

      <module>
        <name>StringHub</name>
        <id>1005</id>
        <logLevel>DEBUG</logLevel>
      </module>

      <module>
        <name>SecondaryBuilders</name>
        <id>0</id>
      </module>

      <module>
        <name>eventBuilder</name>
        <id>0</id>
      </module>

      <module>
        <name>globalTrigger</name>
        <id>0</id>
      </module>

      <module>
        <name>inIceTrigger</name>
        <id>0</id>
      </module>

    </location>

  </cluster>

</icecube>
