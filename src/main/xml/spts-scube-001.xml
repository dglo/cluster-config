<icecube configName="SCUBE001" remarks="SPTS with the 64 DOM mainboards">

  <cluster name="spts">

    <!-- Non-fully-qualified paths are relative to pdaq metaproject on expcont -->
    <logDirForSpade>/mnt/data/pdaq/spade/runs</logDirForSpade>
    <logDirCopies>/mnt/data/pdaqlocal</logDirCopies>

    <defaultLogLevel>INFO</defaultLogLevel>

    <location name="expcont" host="expcont"/>

    <location name="scube" host="scube">
      <module name="StringHub" id="2009"/>
    </location>

    <location name="2ndbuild" host="2ndbuild">
      <module name="SecondaryBuilders"/>
    </location>

    <location name="evbuilder" host="evbuilder">
      <module name="eventBuilder"/>
    </location>

    <location name="trigger" host="trigger">
      <module name="inIceTrigger"/>
      <module name="globalTrigger"/>
    </location>
  </cluster>
</icecube>
